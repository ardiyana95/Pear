@using DSLNG.PEAR.Web.DevExpressDataProvider
@Html.DevExpress().ComboBox(inputSettings =>
                                     {
                                         inputSettings.Name = "Series";
                                         inputSettings.Width = 230;
                                         inputSettings.Properties.DropDownWidth = 350;
                                         inputSettings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                         inputSettings.CallbackRouteValues = new { Controller = "ArtifactDesigner", Action = "KpiSeriesPartial" };
                                         inputSettings.Properties.CallbackPageSize = 15;
                                         inputSettings.Properties.TextField = "Name";
                                         inputSettings.Properties.TextFormatString = "{0}";
                                         inputSettings.Properties.ValueField = "Id";
                                         inputSettings.Properties.ValueType = typeof(int);
                                         inputSettings.Properties.FilterMinLength = 2;
                                         //inputSettings.Properties.Caption = "Type to search:";

                                         inputSettings.Properties.Columns.Add("Name", "Name", 90);
                                     }).BindList(ArtifactDesignerDataProvider.GetKpiRange, ArtifactDesignerDataProvider.GetKpiById).GetHtml()
