@{
    ViewBag.Title = "DER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>DER (Daily Executive Report)</h2>
@Html.Partial("_MessageResponse")
<div class="add-button-wrapper">
    @Html.ActionLink("Generate", "Preview", null, new { @class = "btn-master-rgw btn btn-primary" })
    <a class="btn-master-rgw btn btn-primary" id="upload-der" data-toggle="modal" data-target="#der-upload-modal">Upload</a>
    @*@Html.ActionLink("Input", "Input", null, new { @class = "btn-master-rgw btn btn-primary" })*@
</div>
<table id="der-table" class="rgw-tbl-bp rgw-tbl table-transparent table table-responsive" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Revision</th>
            <th>Generated By</th>
            <th>Revisioned By</th>
            @*<th>Action</th>*@
        </tr>
    </thead>
</table>

<div id="der-upload-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form name="upload-der-form" action="@Url.Action("Upload", "Der")" enctype="multipart/form-data" method="post">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upload DER File</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group form-list">
                        <label>File</label>
                        <input class="form-control" type="file" name="derFile" required>
                        <span class="field-validation-valid" data-valmsg-for="Weight" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group form-list">
                        <label>Date</label>
                        <input name="date" class="form-control datepicker" />
                    </div>
                </div>
                
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-primary" value="Upload"></input>
                        <button type="button" class="btn btn-darkblue" data-dismiss="modal">Close</button>
                    </div>
                </div>
        </form>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#der-table').DataTable({
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                "iDisplayLength": -1,
                "bProcessing": true,
                "bServerSide": true,
                "sServerMethod": "POST",
                "sAjaxSource": '@Url.Action("Grid", "Der")',
                "order": [[1, "asc"]],
                "aoColumns": [
                    {
                        "mDataProp": "Title", "name": "Title", "className": "dt-body-left",
                        "mRender": function (data, type, row) {
                            return '<a href="' + row.Filename.replace('~/', window.location.protocol + "//" + window.location.host + "/") + '">' + data + '</a>';
                        }
                    },
                    { "mDataProp": "Revision", "name": "Description", "className": "dt-body-left" },
                    { "mDataProp": "GenerateBy", "name": "GenerateBy", "className": "dt-body-left" },
                    { "mDataProp": "RevisionBy", "name": "RevisionBy", "className": "dt-body-left" },
                  @*  {
                        "orderable": false,
                        "data": null,
                        "defaultContent": '',
                        "mRender": function (data, type, row) {
                            var deleteLink = '<a class="delete" data-id="_id_" href="javascript:;">Delete</a>'.replace('_id_', data.Id);
                            var PrepareLink = '<span class="fa fa-edit"></span> @Html.ActionLink("Preview", "Revise", "Der", new {id = "_id_"}, null)'.replace('_id_', data.Id);
                            return PrepareLink;
                        }
                    }*@
                ],
                rowCallback: function (row, data) {
                    // Set the checked state of the checkbox in the table
                    //$('input.is-active', row).prop('checked', data.IsActive == 1);
                }
            });

            $('#planningBlueprints-table').on('click', '.delete', function () {
                var id = $(this).attr('data-id');
                if (confirm('Are you sure want to delete this item?' + id)) {
                    var url = '@Url.Action("Delete", "PlanningBlueprint")';
                    var form = $('<form />');
                    form.attr('action', url);
                    form.attr('method', 'POST');
                    form.html('<input type="hidden" name="id" value="' + id + '" />');
                    $('body').append(form);
                    form.submit();
                }
            });

            $('.datepicker').datetimepicker({
                format: "MM/DD/YYYY",
                focusOnShow: false
            });
            

            //$('#upload-der').click(function () {
