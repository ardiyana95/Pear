@model DSLNG.PEAR.Web.ViewModels.Der.Display.DisplayKpiInformationViewModel

<table class="text-center table avg-stats">
    <thead>
        <tr>
            <td colspan="5" style="background-color: #92CDDC">Avg YTD-Key Statistics (compare to prior day)</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="text-decoration: underline">@Html.DisplayDerLabel(Model.KpiInformationViewModels.Single(x => x.Position == 0).KpiLabel, "Feed Gas")</td>
            <td style="text-decoration: underline">@Html.DisplayDerLabel(Model.KpiInformationViewModels.Single(x => x.Position == 1).KpiLabel, "MCHE Rundown")</td>
            <td style="text-decoration: underline">@Html.DisplayDerLabel(Model.KpiInformationViewModels.Single(x => x.Position == 2).KpiLabel, "LNG Prod")</td>
            <td style="text-decoration: underline">@Html.DisplayDerLabel(Model.KpiInformationViewModels.Single(x => x.Position == 3).KpiLabel, "CDS Prod")</td>
            <td style="text-decoration: underline">@Html.DisplayDerLabel(Model.KpiInformationViewModels.Single(x => x.Position == 4).KpiLabel, "Fuel Gas")</td>
        </tr>
        <tr class="avg-stats-value">
            <td>@Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 0).KpiMeasurement, "mmscfd")</td>
            <td>@Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 1).KpiMeasurement, "ton/d")</td>
            <td>@Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 2).KpiMeasurement, "ton/d")</td>
            <td>@Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 3).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 3).KpiMeasurement, "bpcd")</td>
            <td>@Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 4).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 4).KpiMeasurement, "ton/d")</td>
        </tr>
        <tr class="comparison">
            <td><span class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Deviation) fa-lg"></span></td>
            <td><span class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Deviation) fa-lg"></span></td>
            <td><span class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Deviation) fa-lg"></span></td>
            <td><span class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 3).DerItemValue.Deviation) fa-lg"></span></td>
            <td><span class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 4).DerItemValue.Deviation) fa-lg"></span></td>
        </tr>
    </tbody>
</table>



