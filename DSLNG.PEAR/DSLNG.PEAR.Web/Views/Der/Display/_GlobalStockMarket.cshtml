@model DSLNG.PEAR.Web.ViewModels.Der.Display.DisplayKpiInformationViewModel

<table class="table table-bordered global-stock">
    <thead>
        <tr>
            <td rowspan="2">Global Stock Market</td>
            <td colspan="3" style="height: 24px;vertical-align: middle;">Forecasted Market Indicator</td>
        </tr>
        <tr>
            <td>USD/JPY</td>
            <td>BRENT FUT</td>
            <td style="width:30%">USD/IDR</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <span class="comparison absolute"><i class="fa @Html.DisplayDerDeviation(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Deviation)"></i></span>
                @Html.DisplayDerValueWithLabelAtFront("JKSE", Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value, "JSKE")
            </td>
