@model DSLNG.PEAR.Web.ViewModels.Der.Display.DisplayKpiInformationViewModel

<table class="table table-bordered job-pmts vertical-space">
    <thead>
        <tr>
            <td colspan="6">JOB PMTS</td>
        </tr>
        <tr>
            <td colspan="2">ACTUAL 24H</td>
            <td colspan="2">ACTUAL MTD</td>
            <td colspan="2">ACTUAL YTD</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value) mmscf</td>
            <td rowspan="2">@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Value) tonnes</td>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Mtd) mmscf</td>
            <td rowspan="2">@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Mtd) tonnes</td>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Ytd) mmscf</td>
            <td rowspan="2">@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Ytd) tonnes</td>
        </tr>
        <tr>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Value) mmbtu</td>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Mtd)  mmbtu</td>
            <td>@Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Ytd)  mmbtu</td>
        </tr>
        <tr>
            <td colspan="2">@GetPercentage(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Value) of DCQ @Html.DisplayDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Value) mmbtu</td>
            <td colspan="2">@GetPercentage(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Mtd, Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Mtd) of MGN @Html.DisplayDerValue(Html.Divide(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Mtd, 1000)) bbtu</td>
            <td colspan="2">@GetPercentage(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Ytd, Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Ytd) of ADP @Html.DisplayDerValue(Html.Divide(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Ytd, 1000000)) TBtu</td>
        </tr>
    </tbody>
</table>

@helper GetPercentage(string achievement, string target)
{
    if (string.IsNullOrEmpty(achievement) || string.IsNullOrEmpty(target))
    {
        <text>N/A</text>
    }
    else
    {
        var achievementToDouble = double.Parse(achievement);
        var targetToDouble = double.Parse(target);
        var percentage = Math.Round((achievementToDouble/targetToDouble) * 100, 2);
        <text>@percentage %</text>
    }
}

