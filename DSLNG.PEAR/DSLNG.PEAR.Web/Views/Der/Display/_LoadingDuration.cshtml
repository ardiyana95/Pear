@model DSLNG.PEAR.Web.ViewModels.Der.Display.DisplayKpiInformationViewModel
<div class="col-md-6" style="padding: 0">
    <label>Marine, Shipping and Cargo Delivery(time in HH:MM):</label>
    <div class="row loading-duration">
        <div class="col-md-4">
            <label>Loading Duration</label>
        </div>
        <div class="col-md-4">Last Shipping: @Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value) <span class="indicator right-side"><i class="fa @Html.DisplayDerRemark(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Remark)"></i></span></div>
        <div class="col-md-4">Avg YTD: @Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Value)</div>
    </div>
</div>
<div class="col-md-6" style="padding: 0">
    <div class="row standard-loading">
        <div class="col-md-6">
            <label>Standard Loading time: @Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 4).DerItemValue.Value) @if (!string.IsNullOrEmpty(Model.KpiInformationViewModels.Single(x => x.Position == 4).DerItemValue.Value))
                                                                                                                               {<text>Hours</text>}</label>
        </div>
        <div class="col-md-6">
            <label>
                Standard Terminal Time: @Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 4).DerItemValue.Value) @if (!string.IsNullOrEmpty(Model.KpiInformationViewModels.Single(x => x.Position == 5).DerItemValue.Value))
                {<text>Hours(RTL)</text>}
            </label>
        </div>
    </div>
    <div class="row ttl-terminal">
        <div class="col-md-6">
            <label>Ttl terminal time (berth-unberth)</label>
        </div>
        <div class="col-md-6">
            Last Shipping:@Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Value) <span class="indicator @Html.DisplayDerRemark(Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Remark)"><i class="fa @Html.DisplayDerRemark(Model.KpiInformationViewModels.Single(x => x.Position == 3).DerItemValue.Remark)"></i></span> Avg YTD:@Html.DisplayDerValueWithHours(Model.KpiInformationViewModels.Single(x => x.Position == 3).DerItemValue.Value)
        </div>
    </div>
</div>
