@model DSLNG.PEAR.Web.ViewModels.PmsConfigDetails.ScoreIndicatorDetailsViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span
            aria-hidden="true">&times;</span></button>
    <div class="row">
        <div class="trafficlight green"></div>
        <div class="title">Score Indicator</div>
    </div>

</div>
<div class="modal-body">
    <table class="table table-striped table-bordered table-responsive ">
        <thead>
            <tr>
                <th rowspan="2">Expression</th>
                <th rowspan="2">Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ScoreIndicators)
            {
                <tr data-toggle="modal">
                    <td>@item.Expression</td>
                    <td>@item.Color</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
</div>
