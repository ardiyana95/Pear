@model DSLNG.PEAR.Web.ViewModels.PmsSummary.PmsSummaryConfigurationViewModel
@{
    ViewBag.Title = "Index";
}

@Html.Partial("_MessageResponse")
<h3 style="display: inline">Pms Summary Configuration</h3>
<a href="@Url.Action("Create")" class="btn btn-default btn-darkblue pull-right" data-toggle="modal" data-target="#modalDialog" style="margin-bottom: 8px;">Add Pms Summary</a>
<hr/>


<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th rowspan="2">No</th>
            <th rowspan="2">Year</th>
            <th rowspan="2">Title</th>
            <th rowspan="2">Pillar & KPI</th>
            <th rowspan="2">Value Target</th>
            <th rowspan="2">Value Achievement</th>
            <th rowspan="2">Scoring Indicator</th>
            <th rowspan="2">Is Active</th>
            <th rowspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;   
        }
        @foreach (var item in Model.CorporatePortofolios)
        {
            i++;
            <tr data-toggle="modal">
                <td>@i</td>
                <td>@item.Year</td>
                <td>@item.Title</td>
                <td>@Html.ActionLink("Details", "Details", "PmsSummary", new { id = item.Id }, null)</td>
                <td>@Html.ActionLink("Details", "Update", "KpiTarget", new {id = item.Id}, null)</td>
                <td>@Html.ActionLink("Details", "Update", "KpiAchievement", new { id = item.Id }, null)</td>
                <td>@*@Html.ActionLink("Details", "Details", "CorporatePortofolio", new { id = item.Id })*@ Details</td>
                <td>@item.IsActive</td>
                <td>@Html.ActionLink("Edit", "Update", "PmsSummary", new {id = item.Id}, new {data_toggle="modal", data_target="#modalDialog"})</td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("_Modal")

