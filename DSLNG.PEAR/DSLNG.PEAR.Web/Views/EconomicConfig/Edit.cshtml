@model DSLNG.PEAR.Web.ViewModels.EconomicConfigDetail.EconomicConfigViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="EconomicConfig-save">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="title">Economic Config</div>
            <div class="description_year">Edit</div>
            <div>@Html.ValidationSummary(true)</div>
            @Html.HiddenFor(x => x.Id)
        </div>
        <div class="col-md-12">
            <div class="form-inline whitebox">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.IdScenario)
                    @Html.DropDownListFor(model => model.IdScenario, Model.Scenarios, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdScenario)
                </div>
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.IdEconomicSummary)
                    @Html.DropDownListFor(model => model.IdEconomicSummary, Model.EconomicSummaries, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdEconomicSummary)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
                    @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>
        </div>
        <div class="col-md-12 artifact-designer-btns">
            <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-floppy-o"></span>Save</button>
            <a onclick="location.reload();" class="btn btn-primary btn-lg"><span class="fa fa-repeat"></span>Clear</a>
            <a href="/EconomicConfig" class="btn btn-primary btn-lg"><span class="fa fa-times"></span>Cancel</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
