@model DSLNG.PEAR.Web.ViewModels.Calculator.PlantAvailabilityCalculatorViewModel
@{
    ViewBag.Title = "_Pricing";
}
<div class="row calculator">
    <div class="col-md-12">
        <h3>Plant Availability</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-inline">
            <div class="form-group">
                <div class="col-sm-2">
                    <label class="control-label">Year</label>
                </div>
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
                </div>
                <div class="col-sm-2">
                    <label class="control-label">Plant Available </label>
                </div>
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.PlantAvailable, new { @class = "form-control" })
                </div>

                <div class="col-sm-2">
                    @Html.DropDownListFor(model => model.Unit, Model.Units, new {id = "pa-unit"})
                </div>
            </div>
        </form>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Result</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.PlantAvailability, new { id="plantAvailabilityDays", @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <label class="control-label" style="text-align: left">Plant Availability (days)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-2">
                    @Html.TextBoxFor(model => model.ShutDown, new { id="shutDownDays", @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <label class="control-label" style="text-align: left">Shutdown (days)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-2">
                    @Html.TextBoxFor(model => model.PlantAvailability, new { id="plantAvailabilityPercent", @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <label class="control-label" style="text-align: left">Plant Availability (%)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-2">
                    @Html.TextBoxFor(model => model.ShutDown, new { id = "shutDownPercent", @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <label class="control-label" style="text-align: left">Shutdown (%)</label>
                </div>
            </div>
        </form>
    </div>
</div>
