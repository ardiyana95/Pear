        else {
            $('.notification').empty();
            var callback = 'The selected file was not uploaded.'
            var message = '<div class="alert alert-danger" role="alert">' + callback + '</div>';
            $('.notification').append(message).fadeIn().delay(1000).fadeOut();
        }
    }
