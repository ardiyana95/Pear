    var link = null;
    function OnClick(s, e) {
        uc.Upload();
    }
    function OnUploadTextChanged(s, e) {
        uc.Upload();
    }
    function OnFileUploadComplete(s, e) {
        if (e.callbackData !== "") {
            link = e.callbackData;
            var callback = 'FileUploadComplete: ' + e.callbackData;
            $('.notification').empty();
            var message = '<div class="alert alert-success" role="alert">' + callback + '</div>';
