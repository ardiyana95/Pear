@using DSLNG.PEAR.Common.Contants
@model DSLNG.PEAR.Web.ViewModels.InputData.CreateInputDataViewModel
@{
    ViewBag.Title = "Create New Input Data Category";
}

<h2>@ViewBag.Title</h2>
@Html.Partial("_MessageResponse")
<div class="row">
    <div class="col-md-10">
        <form action="@Url.Action("Create")" method="POST">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })<span>(*)</span>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Accountability, new { @class = "control-label" })<span>(*)</span>
                @Html.DropDownListFor(model => model.Accountability, Model.Accountabilities, "Select Accountability", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Accountability)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PeriodeType, new { @class = "control-label" })<span>(*)</span>
                @Html.DropDownListFor(model => model.PeriodeType, Model.PeriodeTypes, "Select Accountability", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PeriodeType)
            </div>

            <div style="position:relative">
                <h3>Configuration</h3>
                <div class="form-group">
                    <a class="add-group btn btn-primary" style="position:absolute;right:0;top:-1px" data-toggle="modal" data-target="#add-group-modal">Add Group</a>

                </div>
            </div>

            <hr />

            <div class="form-inline">
                <div class="form-group">
                    <label for="exampleInputName2">Name</label>
                    <input type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail2" placeholder="jane.doe@example.com">
                </div>
                <button type="submit" class="btn btn-default">Send invitation</button>
            </div>

            <div class="group-wrapper">
                <div class="row">
                    
                    <div class="col-md-8">
                        <h6>Feed Gas</h6>
                    </div>
                    <div class="col-md-4">
                        <input type="text" />
                    </div>
                    <div class="row">
                        
                        <div class="col-md-4">
                            <a class="add-group btn btn-primary" style="position:absolute;right:0;top:10px" data-toggle="modal" data-target="#add-kpi-modal">Add Kpi</a>
                        </div>

                    </div>
                </div>
            </div>
    </div>

    @*<div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
            <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
        </div>*@
    </form>
</div>
</div>

<div id="add-group-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Group</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Group Name</label>
                    <input type="text" class="group-name" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-add-group">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="add-kpi-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Kpi</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Kpi Name</label>
                    <input type="text" class="group-name" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-add-group">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btn-add-group').click(function () {

                $('#group-wrapper').add()
            });
        });
    </script>
}