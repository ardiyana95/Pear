@model DSLNG.PEAR.Services.Responses.Menu.GetSiteMenusResponse
@{
    Layout = null;
}
@helper  ExtractMenu(IEnumerable<DSLNG.PEAR.Services.Responses.Menu.GetSiteMenusResponse.Menu> Menus, int ParentId=0) { 
    foreach (var menu in Menus.Where(x => x.ParentId==ParentId).ToList())
    {
        <li>
            <a href="@menu.Url" class="">
                @Html.Raw(menu.Icon) <span>@menu.Name</span>
            </a><br />
        </li>
    }
}


