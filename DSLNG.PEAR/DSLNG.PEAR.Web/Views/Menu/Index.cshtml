@{
    ViewBag.Title = "Menu List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Menu List</h2>
@Html.Partial("_MessageResponse")
<div class="add-button-wrapper">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn_small_lightblue" })
</div>
@*@Html.Action("IndexPartial")*@

<table id="menu-table" class="table-transparent table table-bordered table-responsive" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Order</th>
            <th>Is Root</th>
            <th>Remark</th>
            <th>Module</th>
            <th>Is Active</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#menu-table').DataTable({
                "bProcessing": true,
                "bServerSide": true,
                "sServerMethod": "POST",
                "sAjaxSource": '@Url.Action("Grid", "Menu")',
                "order": [[3, "asc"]],
                "aoColumns": [
                    { "mDataProp": "Name", "name": "Name" },
                    { "mDataProp": "Order", "name": "Order" },
                    {
                        "mDataProp": "IsRoot", "name": "IsRoot",
                        render: function (data, type, row) {
                            if (type === 'display') {
                                return '<input type="checkbox" class="is-root">';
                            }
                            return data;
                        }
                    },
                    { "mDataProp": "Remark", "name": "Remark", "sortable": false },
                    { "mDataProp": "Module", "name": "Module" },
                    {
                        "mDataProp": "IsActive", "name": "IsActive",
                        render: function (data, type, row) {
                            if (type === 'display') {
                                return '<input type="checkbox" class="is-active">';
                            }
                            return data;
                        }
                    },
                    {
                        "orderable": false,
                        "data": null,
                        "defaultContent": '',
                        "mRender": function (data, type, row) {
                            var deleteLink = '<a class="delete" data-id="_id_" href="javascript:;">Delete</a>'.replace('_id_', data.Id);
                            var editLink = '@Html.ActionLink("Edit", "Update", "Menu", new { id = "_id_" }, null)'.replace('_id_', data.Id);
                            return editLink + ' | ' + deleteLink;
                        }
                    }
                ],
                rowCallback: function (row, data) {
                    // Set the checked state of the checkbox in the table
                    $('input.is-active', row).prop('checked', data.IsActive == 1);
                    $('input.is-root', row).prop('checked', data.IsRoot == 1);
                }
            });

            $('#menu-table').on('click', '.delete', function () {
                var id = $(this).attr('data-id');
                if (confirm('Are you sure want to delete this item?')) {
                    var url = '@Url.Action("Delete", "Menu")';
                    $('<form action="' + url + '" method="POST">' +
                        '<input type="hidden" name="id" value="' + id + '">' +
                        '</form>').submit();
                }
            });
        });        
    </script>
}