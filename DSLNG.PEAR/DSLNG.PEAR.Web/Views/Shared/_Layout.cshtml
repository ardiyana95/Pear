            </section>
            <!-- /.sidebar -->
        </aside>
        <aside class="right-side">
                @RenderBody()
        </aside>
       
        @Scripts.Render("~/bundles/js")
        <script>
            $(".menu_dashboard").click(function () {
                $(".submenu_dashboard").show();
                $(".submenu_plan").hide();
                $(".submenu_execute").hide();
                $(".submenu_assess").hide();
                $(".submenu_report").hide();

            });


            $(".menu_plan").click(function () {
                $(".submenu_dashboard").hide();
                $(".submenu_plan").show();
                $(".submenu_execute").hide();
                $(".submenu_assess").hide();
                $(".submenu_report").hide();

            });

            $(".menu_execute").click(function () {
                $(".submenu_dashboard").hide();
                $(".submenu_plan").hide();
                $(".submenu_execute").show();
                $(".submenu_assess").hide();
                $(".submenu_report").hide();

            });

            $(".menu_assess").click(function () {
                $(".submenu_dashboard").hide();
                $(".submenu_plan").hide();
                $(".submenu_execute").hide();
                $(".submenu_assess").show();
                $(".submenu_report").hide();

            });

            $(".menu_report").click(function () {
                $(".submenu_dashboard").hide();
                $(".submenu_plan").hide();
                $(".submenu_execute").hide();
                $(".submenu_assess").hide();
                $(".submenu_report").show();

            });

        </script>

        <script>
            $(".accordion > div").hide().parent().hover(function (event) {
                $(this).children("div").slideToggle(event.type === "mouseenter");
            });
        </script>
</body>
</html>
