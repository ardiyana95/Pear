                                <div class="sublevel">
                                    <a href="#">QHSE</a><br />
                                    <a href="#">HCD</a><br />
                                    <a href="#">Procurement</a><br />
                                    <a href="#">Maintance</a><br />
                                </div>
                            </div>
                            <a href="#">Executive Summary</a><br />
                            <a href="#">Summary KO</a><br />
                            <a href="#">Economic Summary</a><br />
                            <a href="index2.html">PMS Summary</a><br />
                            <div class="accordion">
                                <a href="#">Configuration Setting<span class="fa fa-angle-down"></span></a><br />
                                <div class="sublevel">
                                    <a href="#">Template</a><br />
                                    <a href="#">Template Editor</a><br />
                                </div>
                            </div>



                        </ul>

                        <ul class="submenu_plan" style="display: none;">

                            <div class="accordion">
                                <a href="#">Business Indicator<span class="fa fa-angle-down"></span></a><br />
                                <div class="sublevel">
                                    <a href="#">Period</a><br />
                                    <a href="#">Type</a><br />
                                    <a href="#">Method</a><br />
                                    <a href="#">Conversion</a><br />
